<%- include('partials/_header'); %>
    <section>
        <div class="breadcrumb-bar">
            <div class="container">
                <div class="row align-items-center inner-banner">
                    <br>
                    <div class="col-md-12 col-12 text-center">
                        <h2 class="breadcrumb-title">Yayınlanan Projeler</h2>
                        <nav aria-label="breadcrumb" class="page-breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Yayınlanan Projeler</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section>
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <br>
                    <div class=" mx-auto col-xl-9 col-md-8">
                        <div class="page-title">
                            <center>
                                <h3>Yayınlanan Projeler </h3>
                            </center>
                        </div>

                        <% if (flashMessages) { %>
                            <% if (flashMessages.success) { %>
                              <div class="alert alert-success">
                            <%= flashMessages.success %>
                            </div>
                          <% } else if (flashMessages.error) { %>
                           <div class="alert alert-danger">
                            <%= flashMessages.error %>
                            </div>
                            <% } %>
                          <% } %>     


                        <!-- Filtreleme-->
                        <div class="col-md-12 col-lg-12 col-xl-12 ">

                            <div class="card search-filter">
                                <div class="card-header d-flex justify-content-between">
                                    <h4 class="card-title mb-0">Kategori Seç</h4>
                                </div>
                                <div class="card-body">
                                 
                                    <div class="filter-widget">
                                        <h4>Sana uygun projeyi bul!</h4>

                                        <div class="top-nav-search">
                                            <form method="GET" id="site-searchform" action="/jobs">
                                            <input type="text" name="search" class="form-control" placeholder="Proje ara...">
                                            <button value="Search" class="btn" type="submit"><i class="feather-search"></i></button>
                                            </form>
                                            </div>

                                        <div class="form-group">
                                            <select onchange="if (this.value) window.location.href=this.value"  class="form-control select">
                                                <option invalid >Proje Kategorisi Seç</option>
                                                <option value="/jobs">Tüm Kategoriler</option>
                                                <% for(let i=0; i< categories.length; i++){ %>
                                                    <option value="/jobs?categories=<%= categories[i].slug %>">
                                                        <%= categories[i].name %>
                                                    </option>
                                                    <% } %>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="proposals-section">
                            <h3 class="page-subtitle">Yayınlanan İlanlara Göz At</h3>
                            <% for (let i=0; i< jobs.length; i++) { %>
                                <div class="freelancer-proposals">
                                    <div class="project-proposals align-items-center freelancer">
                                        <div class="proposals-info">
                                            <div class="proposals-detail">
                                                <h2 class="proposals-title">
                                                    <%= jobs[i].name %>
                                                </h2>
                                                <div class="proposals-content">
                                                    <div class="proposal-img">
                                                        <div class="text-md-center">
                                                            <h4>
                                                                <%= jobs[i].isveren %>
                                                            </h4>
                                                            <span class="info-btn">İş Veren</span>
                                                        </div>
                                                    </div>
                                                    <div class="proposal-client">
                                                        <h4 class="title-info">Fiyat Teklifi</h4>
                                                        <h2 class="client-price">
                                                            <%= jobs[i].fiyat %> Tl
                                                        </h2>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="project-hire-info">
                                                <div class="content-divider-1"></div>
                                                <div class="projects-amount">
                                                    <h4>Proje Sahibi: <%= jobs[i].isveren %> </h4>
                                                </div>
                                                <div class="content-divider-1"></div>
                                                <div class="projects-action text-center">                        
                                                    <a href="/jobs/<%= jobs[i].slug %>"
                                                        class="projects-btn">Proje Sayfasına Git</a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="description-proposal">
                                            <h5 class="desc-title">Açıklama</h5>
                                            <p> <%= jobs[i].description.substring(0,100) + "..." %></p>
                                        </div>
                                    </div>
                                </div>
                        
                                <% } %>
                        
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include('partials/_footer'); %>