<%- include('partials/_header'); %>

    <section>
        <div class="breadcrumb-bar">
            <div class="container">
                <div class="row align-items-center inner-banner">
                    <br>
                    <div class="col-md-12 col-12 text-center">
                        <h2 class="breadcrumb-title">Freelancerlar</h2>
                        <nav aria-label="breadcrumb" class="page-breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Freelancerlar</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section>
        <div class="content">
            <div class="container">
                <div class="row">

                    <% if (flashMessages) { %>
                        <% if (flashMessages.success) { %>
                          <div class="alert alert-success">
                        <%= flashMessages.success %>
                        </div>
                      <% } else if (flashMessages.error) { %>
                       <div class="alert alert-danger">
                        <%= flashMessages.error %>
                        </div>
                        <% } %>
                      <% } %>     


                            <!-- Filtreleme-->
                            <div class="col-md-12 col-lg-6 col-xl-3 ">

                                <div class="card search-filter">
                                    <div class="card-header d-flex justify-content-between">
                                        <h4 class="card-title mb-0">Kategori Seç</h4>
                                    </div>
                                    <div class="card-body">
                                     
                                        <div class="filter-widget">
                                            <h4>Sana uygun freelancerı bul!</h4>

                                            <div class="top-nav-search">
                                                <form method="GET" id="site-searchform" action="/freelancers">
                                                <input type="text" name="search" class="form-control" placeholder="Freelancer ara...">
                                                <button value="Search" class="btn" type="submit"><i class="feather-search"></i></button>
                                                </form>
                                                </div>

                                            <div class="form-group">
                                                <select onchange="if (this.value) window.location.href=this.value"  class="form-control select">
                                                    <option invalid >Freelancer Kategorisi Seç</option>
                                                    <option value="/freelancers">Tüm Kategoriler</option>                                                    <% for(let i=0; i< categories.length; i++){ %>
                                                        <option value="/freelancers?categories=<%= categories[i].slug %>">
                                                            <%= categories[i].name %>
                                                        </option>
                                                        <% } %>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
    
                            </div>
                    <%- include('partials/freelancer_list'); %>

                </div>
            </div>
        </div>

    </section>

    <%- include('partials/_footer'); %>